
<div class="container">
	<div class="margin-top-20">
		<a href="#" data-toggle="modal" data-target="#add-book-modal" class="btn btn-primary">Add New Book</a>
	</div>

	<%if flash[:error] %>
	    <div class="alert alert-danger">
	       <%= flash[:error] %>
	    </div>
	<%end%>

	<!--One book-->
	<% @books.each do |book|%>
	<div class="row margin-top-20 wine-container">
		<div class="col-sm-3">
			<img src="<%=book.imgScr%>" class="img-responsive" />
		</div>
		<div class="col-sm-9">
			<div class="margin-top-20">
				<span class="bold">Title: </span><span><%=book.title%></span>
			</div>
			<div>
				<span class="bold">Author: </span><span><%=book.author%></span>
			</div>
			<div>
				<span class="bold">Release Date: </span><span><%=book.releaseDate%></span>
			</div>
			<div class="margin-top-20">
				<a href="/books/<%=book.id%>/edit" class="btn btn-default">Edit Book</a>
				<a href="<%= book_shops_path(book.id) %>" class="btn btn-default">Book Shops</a>
			</div>
		</div>
	</div>
	<%end%>
	<!--/One Book-->
</div>

<!--Add Book Modal-->
<%= form_for @bookAdd do |f| %>
<div id="add-book-modal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title">Add New Wine</h4>
			</div>
			<div class="modal-body">
				<div class="bold">
					Title
				</div>
				<div class="margin-top-20">
					<%= f.text_field :title %>
				<div class="bold margin-top-20">
					Author
				</div>
				<div class="margin-top-20">
					<%= f.text_field :author %>
				</div>
				<div class="bold margin-top-20">
					Release Date
				</div>
				<div class="margin-top-20">
					<%= f.text_field :releaseDate %>
				</div>
				<div class="bold margin-top-20">
					Image
				</div>
				<div class="margin-top-20">
					<%= f.text_field :imgScr %>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				<button type="submit" class="btn btn-primary">Save Book</button>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!--/Add Wine Modal-->
<% end %>

