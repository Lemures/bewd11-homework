
<div>
		<a href="#" class="btn btn-primary" data-target="#add-student-modal" data-toggle="modal">Add Student</a>
</div>
<div class= "small-container margin-top-20" >
    <table class= "table striped">
    <%@students.each do |s| %>
        <tr>
            <td>
             <%= s.name %>
            </td>

            <td>
             <%= s.email %>
            </td>

            <td>
             <%= s.age %>
            </td>

            <td>
                <a href="<%= enrollments_student_path(s.id) %>" class="btn btn-primary" >Enrollments</a>
                <a href="/students/<%=s.id%>/edit" class="btn btn-primary" >Edit</a>
            </td>
        </tr>
    <%end%>
    </table>

</div>
    <%= form_for @studentAdd do |f| %>
<div id="add-student-modal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
				<h4 class="modal-title">Add a Student</h4>
			</div>
			<div class="modal-body">
				<div class="bold">
					Name
				</div>
				<div class="margin-top-20">
			    <%= f.text_field :name %>
				<div class="bold margin-top-20">
					Email
				</div>
				<div class="margin-top-20">
				<%= f.text_field :email %>
				<div class="bold margin-top-20">
					Age
				</div>
				<div class="margin-top-20">
				<%= f.text_field :age %>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				<button type="submit" class="btn btn-primary">Save Student</button>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<% end %>
